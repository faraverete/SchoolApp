<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/textForUsername"
        android:layout_below="@+id/EditTextPassword"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextUsename"
        android:layout_alignTop="@+id/textForUsername"
        android:layout_alignStart="@+id/textForPassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textForPassword"
        android:layout_below="@+id/loginButton"
        android:layout_alignStart="@+id/textForUsername"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/EditTextPassword"
        android:inputType="textPassword"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/loginButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:onClick="invokeLogin"
        android:text="LOGIN"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textForPassword" />


</LinearLayout>